<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="cooking">
     <sql id="cooking.cloumn">
         ID,
         RecipeID,
         Description,
         SortOrder
     </sql>
     <sql id="cooking.values">
         #{id},
         #{recipeID},
         #{description},
         #{sortOrder}
     </sql>
