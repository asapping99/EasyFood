	<insert id="cooking.create">
	    insert into CookingMethod (<include refid="cooking.cloumn"></include>)
  		values (<include refid="cooking.values"></include>)
	</insert>
	
	<update id="cooking.update">
	    update CookingMethod
	    <set>
	        <if test="recipeID != null">recipeID=#{recipeID},</if>
	        <if test="description != null">description=#{description},</if>
	        <if test="sortOrder != null">sortOrder=#{sortOrder}</if>
	    </set>
	    where id=#{id}
	</update>
	
	<delete id="cooking.delete" parameterType="String">
	    delete from CookingMethod where id=#{id}
	</delete>
    
</mapper>