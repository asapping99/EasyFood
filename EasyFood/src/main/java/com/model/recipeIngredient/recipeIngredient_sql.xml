	<insert id="recipeIngredient.create">
	    insert into recipeIngredient (<include refid="recipeIngredient.cloumn"></include>)
  		values (<include refid="recipeIngredient.values"></include>)
	</insert>
	
	<update id="recipeIngredient.update">
	    update recipeIngredient
	    <set>
	        <if test="recipeID != null">recipeID=#{recipeID},</if>
	        <if test="ingredientID != null">ingredientID=#{ingredientID},</if>
	        <if test="sortOrder != null">sortOrder=#{sortOrder}</if>
	    </set>
	    where id=#{id}
	</update>
	
	<delete id="recipeIngredient.delete" parameterType="String">
	    delete from recipeIngredient where id=#{id}
	</delete>
    
</mapper>