<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="userInfo">
     <sql id="userInfo.cloumn">
         ID,
         Name,
         Account,
         Password,
         CreatedAt,
         LastLoginDate
     </sql>
     <sql id="userInfo.values">
         #{id},
         #{name},
         #{account},
         #{password},
         SYSDATE,
         SYSDATE
     </sql>
     
    <select id="userInfo.get" parameterType="object" resultType="com.model.userInfo.UserInfoVO">
        select <include refid="userInfo.cloumn"></include> from userInfo where account=#{account} and password=#{password} 
    </select>
	
	<insert id="userInfo.create">
	    insert into userInfo (<include refid="userInfo.cloumn"></include>)
  		values (<include refid="userInfo.values"></include>)
	</insert>
	
	<update id="userInfo.update">
	    update userInfo
	    <set>
	        <if test="name != null">name=#{name},</if>
	        <if test="password != null">password=#{password}</if>
	        <if test="lastLoginDate != null">lastLoginDate=#{lastLoginDate}</if>
	    </set>
	    where id=#{id}
	</update>
	
	<delete id="userInfo.delete" parameterType="String">
	    delete from userInfo where id=#{id}
	</delete>
    
</mapper>