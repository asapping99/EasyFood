<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="recipe">
     <sql id="recipe.cloumn">
         ID,
         Name,
         CategoryID,
         Creator,
         CreatedAt,
         ModifiedAt,
         ViewCount
     </sql>
     <sql id="recipe.values">
         #{id},
         #{name},
         #{categoryID},
         #{creator},
         #{createdAt},
         #{modifiedAt},
         #{viewCount}
     </sql>
