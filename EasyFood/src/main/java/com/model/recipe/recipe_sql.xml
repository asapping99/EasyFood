	<insert id="recipe.create">
	    insert into Recipe (<include refid="recipe.cloumn"></include>)
  		values (<include refid="recipe.values"></include>)
	</insert>
	
	<update id="recipe.update">
	    update Recipe
	    <set>
	        <if test="categoryID != null">categoryID=#{categoryID},</if>
	        <if test="creator != null">creator=#{creator},</if>
	        <if test="createdAt != null">createdAt=#{createdAt},</if>
	        <if test="modifiedAt != null">modifiedAt=#{modifiedAt},</if>
	        <if test="viewCount != null">viewCount=#{viewCount}</if>
	    </set>
	    where id=#{id}
	</update>
	
	<delete id="recipe.delete" parameterType="String">
	    delete from Recipe where id=#{id}
	</delete>
    
</mapper>